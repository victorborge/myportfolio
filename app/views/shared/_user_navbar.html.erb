      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-user-collapse">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <%= active_link_to 'Home <span class="caret"></span>'.html_safe, '#', active: [[], ['home', 'events', 'calendar', 'policy']],
                             class: 'test', role: 'button', 'data-toggle' => 'dropdown', 'aria-haspopup' => true, 'aria-expanded' => false %>
          <ul class="dropdown-menu">
            <%= active_link_to 'Announcements', home_profile_path, wrap_tag: :li %>
            <%= active_link_to 'Events', events_profile_path, wrap_tag: :li %>
