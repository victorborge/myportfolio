            <%#= active_link_to 'Policy', policy_profile_path, wrap_tag: :li %>
          </ul>
        </li>
        <li class="dropdown">
          <%= active_link_to 'Account <span class="caret"></span>'.html_safe, '#', active: [[], ['edit', 'account_balance', 'account_settings', 'team_manager']],
                             class: 'test', role: 'button', 'data-toggle' => 'dropdown', 'aria-haspopup' => true, 'aria-expanded' => false %>
          <ul class="dropdown-menu">
            <%= active_link_to 'Account Balance', account_balance_profile_path, wrap_tag: :li %>
            <%= active_link_to 'Account Settings', edit_user_path(current_user), wrap_tag: :li %>
          </ul>
        </li>
        <li class="dropdown">
          <%= active_link_to 'Group <span class="caret"></span>'.html_safe, '#', active: [[], ['group_statistics', 'group_purchases', 'group_points']],
                             class: 'test', role: 'button', 'data-toggle' => 'dropdown', 'aria-haspopup' => true, 'aria-expanded' => false %>
          <ul class="dropdown-menu">
            <%= active_link_to 'Team Manager', team_manager_profile_path, wrap_tag: :li %>
            <%= active_link_to 'Statistics', group_statistics_profile_path, wrap_tag: :li %>
          </ul>
        </li>
        <li class="dropdown">
          <%= active_link_to 'RG Products <span class="caret"></span>'.html_safe, '#', active: [['items'], []],
