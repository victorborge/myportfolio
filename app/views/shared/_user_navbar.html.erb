          <ul class="dropdown-menu">
            <%= active_link_to 'All', items_path, active: /items$/, wrap_tag: :li %>
            <% Category.all.each do |category| %>
                <%= active_link_to category.name, items_path(category: category.name),
                                   active: Regexp.new(Regexp.escape("items?category=#{url_encode(category.name).gsub('%20','+')}")), wrap_tag: :li %>
            <% end %>
          </ul>
        </li>
        <%= active_link_to 'Membership', new_payment_path, wrap_tag: :li %>
        <%= active_link_to 'Support', support_profile_path, wrap_tag: :li %>
