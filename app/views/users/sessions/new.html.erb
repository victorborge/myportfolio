          <%= f.email_field :email, placeholder: 'Username', autofocus: true, class: 'styled-control' %>
        </div>

        <div class="field pre-image password">
          <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'styled-control' %>
