<%= simple_form_for([:admin, current_admin]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Save', class: 'btn btn-primary' %>
    </div>
<% end %>