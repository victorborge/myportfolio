gem 'truncate_html'

# Engine gems
gem 'devise'
gem 'rails_12factor', group: :production
gem 'rails_config', '~> 0.4.2'
gem 'high_voltage', '~> 2.3.0'
gem 'hashids'
gem 'paperclip'
